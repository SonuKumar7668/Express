<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>USERS</title>
</head>
<style>
    *{
        font-size: 0.8rem;
    }
    h1{
        text-align: center;
    }
    table, th, td {
        border: 1px solid black;
    }
    table{
        margin: auto;
    }
    th{
        background-color: #4CAF50;
    }
    td{
        background-color: #9e9e9e;
    }
    button{
        background-color: #6fff74;
        border: 1px solid #4CAF50;
    }
</style>
<body>
    <h1>USERS</h1>
    <table>
        <tr>
            <th>ID</th>
            <th>username</th>
            <th>email</th>
            <th>Edit</th>
            <th>DELETE</th>
        </tr>
        <% for(user of users){ %>
            <tr>
                <td><%= user.id %></td>
                <td><%= user.username %></td>
                <td><%= user.email %></td>
                <td>
                    <form action="/user/<%=user.id%>/edit" method="GET">
                        <button>Edit Username</button>
                    </form>
                </td>
                <td>
                    <form action="/user/<%=user.id%>/delete" method="GET">
                        <button>DELETE USER</button>
                    </form>
                </td>
            </tr>
        <% } %>
    </table>
</body>
</html>

